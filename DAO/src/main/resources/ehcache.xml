<?xml version="1.0" encoding="UTF-8"?>

    <ehcache>
    <diskStore path="java.io.tmpdir"/>

    <defaultCache
        maxElementsInMemory="2000"
        eternal="false"
        overflowToDisk="true"
        diskPersistent="false"
        memoryStoreEvictionPolicy="LRU"
    />

    <cache name="by.htp3.hotel.bean.User"
            maxElementsInMemory="1500"
            eternal="true"
            overflowToDisk="false"
            />


    <cache name="by.htp3.hotel.bean.Room"
       maxElementsInMemory="1500"
       eternal="true"
       overflowToDisk="false"
            />

    <cache name="by.htp3.hotel.bean.Order"
           maxElementsInMemory="1500"
           eternal="true"
           overflowToDisk="false"
    />

</ehcache>

